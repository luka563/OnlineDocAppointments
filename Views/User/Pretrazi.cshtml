
@{
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">

@Html.Partial("_Head1");

<body>
    @Html.Partial("_Header");

<main id="main">

        <!-- ======= Breadcrumbs Section ======= -->
        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>PRETRAŽI DOKTORE</h2>
                    <ol>
                        <li><a href="https://localhost:7103/#hero">Početna</a></li>
                        <li>Pretraži doktore</li>
                    </ol>
                </div>

            </div>
        </section><!-- End Breadcrumbs Section -->

        <section class="inner-page">
            <div class="container">
                <h2 style="color:black">Izaberite Vašeg doktora: </h2>

                <form class="container col-md-4">
                    <select class="form-select mr" name="specializationFilter" id="specializationFilter">
                        <option value=" ">Više</option>
                        @foreach (string str in ViewBag.Specs.specializations)
                        {
                            <option value="@str">@str</option>
                        }

                        <input type="text" placeholder="Enter doctor name" name="searchByFullName" id="searchByFullName" class="form-control mr" />
                    </select>
                    <input type="submit" value="Filter" class="mr btn btn-primary" />
                </form>

                            
                       
            </div>
        </section>

                <div class="table-wrapper">
                    <table class="sortable fl-table">
                        <tr>
                            <th>Slika</th>
                            <th>Puno ime i prezime</th>
                            <th>Specijalizacija</th>
                            <th>Ocena</th>
                        </tr>
                        @if (ViewBag.Zubari != null)
                            @foreach (DoctorSearch zubar in ViewBag.Zubari)
                            {
                                <tr>
                                    <td><img src="@zubar.Picture" width="50" height="50"></img></td>
                                    <td><a href="/user/showprofiledoctor/?userName=@zubar.UserName">@zubar.FirstName @zubar.LastName</a></td>
                                    <td>@zubar.Specialization</td>
                                    <td>@zubar.Rating</td>
                                </tr>
                            }
                    </table>
                </div>
            </div>
        </section>

    </main><!-- End #main -->
</body>
<!-- ======= Footer ======= -->
@Html.Partial("_Footer");
    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="../assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="../assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="../assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="../assets/js/main.js"></script>




<script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    *{
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
}
body{
    font-family: Helvetica;
    -webkit-font-smoothing: antialiased;
    
}
h2{
    text-align: center;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: white;
    padding: 30px 0;
}

/* Table Styles */

.table-wrapper{
    margin: 10px 70px 70px;
    box-shadow: 0px 35px 50px rgba( 0, 0, 0, 0.2 );
}

.fl-table {
    border-radius: 5px;
    font-size: 12px;
    font-weight: normal;
    border: none;
    border-collapse: collapse;
    width: 100%;
    max-width: 100%;
    white-space: nowrap;
    background-color: white;
}

.fl-table td, .fl-table th {
    text-align: center;
    padding: 8px;
}

.fl-table td {
    border-right: 1px solid #f8f8f8;
    font-size: 12px;
}

.fl-table thead th {
    color: #ffffff;
    background: #4FC3A1;
}


.fl-table thead th:nth-child(odd) {
    color: #ffffff;
    background: #324960;
}

.fl-table tr:nth-child(even) {
    background: #F8F8F8;
}
.mr{
    margin:5px;
}
</style>





</html>