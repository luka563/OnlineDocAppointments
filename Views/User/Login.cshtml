@model StomatoloskaOrdinacija.Models.UserLogin

@{
    ViewData["Title"] = "Login";
}
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
@Html.Partial("_Head1");

<body>
    @Html.Partial("_Header");


    <main id="main">

        <!-- ======= Breadcrumbs Section ======= -->
        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Stranica za logovanje</h2>
                    <ol>
                        <li><a href="#https://localhost:7103/#hero">Početna</a></li>
                        <li>Stranica za logovanje</li>
                    </ol>
                </div>

            </div>
        </section><!-- End Breadcrumbs Section -->

        <section class="inner-page">
            <div class="marg col-md-4">
                <form asp-action="Login" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        
                        <label asp-for="EmailID" class="control-label"></label>
                        <input asp-for="EmailID" class="form-control" required />
                        <span asp-validation-for="EmailID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div >
                        
                        <input type="submit" class="btn btn-primary mr" value="Login">
                    </div>
                    @if (ViewBag.Message != null)
                    {
                    <div class="alert alert-danger">
                        <strong>Greška!</strong>@ViewBag.Message
                    </div>
                    }
                </form>

                <!-- End Hero Section -->
                <div>
                    <p>Nemate nalog?<a asp-controller="User" asp-action="Registration">Registruj se</a> </p>
                </div>
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-4"></div>
        </section>

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    @Html.Partial("_Footer");

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="../assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="../assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="../assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="../assets/js/main.js"></script>

</body>

</html>

<style>
    .mr
    {
        margin-top:10px;
    }
    .marg
    {
        margin-left:10px;
    }
</style>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
